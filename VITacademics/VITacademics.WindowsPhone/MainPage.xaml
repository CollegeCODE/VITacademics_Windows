    <!-- Bottom App Bar -->
    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Compact" Background="{StaticResource AlternateDarkBrush}">
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Refresh" Label="refresh" Click="RefreshButton_Click"
                              IsEnabled="{Binding IsIdle, Mode=OneWay}"></AppBarButton>
                <AppBarButton Icon="AllApps" Label="menu" Click="MenuButton_Click"
                              IsEnabled="{Binding IsContentAvailable, Mode=OneWay}"></AppBarButton>
                <AppBarButton Icon="Calendar" Label="today" Click="ViewTodayButton_Click"
                              IsEnabled="{Binding IsContentAvailable, Mode=OneWay}"></AppBarButton>
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="help" Click="HelpButton_Click"></AppBarButton>
                <AppBarButton Label="settings" Click="SettingsButton_Click"></AppBarButton>
                <AppBarButton Label="about" Click="AboutButton_Click"></AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    
    <!-- Root Grid -->
    <Grid RequestedTheme="Light" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Loading Screen Presenter -->
        <ContentPresenter Grid.Row="1" x:Name="loadingScreenPresenter" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <ProgressRing IsActive="True" Margin="0,0,0,5">
                </ProgressRing>
                <TextBlock Text="Getting your content ready" Style="{StaticResource SubheaderTextBlockStyle}"></TextBlock>
            </StackPanel>
        </ContentPresenter>
        
        <!-- Content Presenter -->
        <ContentPresenter Grid.Row="1" x:Name="contentPresenter">
        </ContentPresenter>

        <!-- Menu Presenter -->
        <ContentPresenter Grid.Row="1" x:Name="menuPresenter">
        </ContentPresenter>

        <!-- Page Top Panel -->
        <Grid Margin="0,-1,0,0" RequestedTheme="Dark" Background="{StaticResource AlternateDarkBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <!--
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                -->
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                
                <Viewbox Margin="13,0,-6,4" Width="40" Visibility="{Binding CanGoBack, Mode=OneWay}" VerticalAlignment="Center">
                    <AppBarButton Icon="Back" VerticalContentAlignment="Center" IsCompact="True"
                                  Click="ReturnButton_Click"></AppBarButton>
                </Viewbox>
                
                <TextBlock Margin="19,10,0,10" FontSize="29" VerticalAlignment="Center"
                           Text="{Binding TitleText, Mode=OneWay}" Foreground="{ThemeResource PhoneForegroundBrush}" LineStackingStrategy="MaxHeight"
                           Style="{StaticResource SubheaderTextBlockStyle}"></TextBlock>
                
                <!--<TextBlock Margin="19,3,0,7" VerticalAlignment="Center"
                           Text="{Binding TitleText, Mode=OneWay}" Foreground="{ThemeResource PhoneForegroundBrush}" LineStackingStrategy="MaxHeight"
                           Style="{StaticResource TitleTextBlockStyle}"></TextBlock>-->
            </StackPanel>
            <!--
            <AppBarButton Grid.Column="1" Margin="0,0,15,0" Click="RefreshButton_Click"
                          HorizontalAlignment="Center" VerticalAlignment="Center"            
                          Icon="Refresh" Style="{StaticResource TopBarButtonStyle}"
                          IsEnabled="{Binding IsIdle, Mode=OneWay}"></AppBarButton>
            <AppBarButton Grid.Column="2" Margin="0,0,15,0" Click="MenuButton_Click"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          IsEnabled="{Binding IsContentAvailable, Mode=OneWay}"
                          Icon="AllApps" Style="{StaticResource TopBarButtonStyle}"></AppBarButton>
            -->
        </Grid>
        
    </Grid>
    
</Page>