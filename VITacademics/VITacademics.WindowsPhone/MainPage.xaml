<Page
    x:Class="VITacademics.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VITacademics"
    xmlns:dp="using:DataPlotterTools"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light"
    Background="{StaticResource AppAlternateBackgroundColor}">
    
    <Page.Resources>
        <ResourceDictionary Source="PhoneResources.xaml"></ResourceDictionary>
    </Page.Resources>
    
    <Page.BottomAppBar>
        <CommandBar></CommandBar>
    </Page.BottomAppBar>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Margin="0,-1,0,0" Background="{StaticResource AppAlternateBackgroundColor}">
            <TextBlock Margin="10,13,0,10" Text="VITacademics" FontSize="30"
                       Style="{StaticResource SubheaderTextBlockStyle}" Foreground="White"></TextBlock>
        </Grid>
        <Button Grid.Row="1" HorizontalAlignment="Center"
                Click="Button_Click" Content="Log Out"></Button>
    </Grid>
    
</Page>