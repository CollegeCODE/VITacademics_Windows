<UserControl
    x:Class="VITacademics.UIControls.MenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VITacademics.UIControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light"
    d:DesignHeight="720"
    d:DesignWidth="420">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resources/PhoneResources.xaml"></ResourceDictionary>
                <ResourceDictionary>
                    <Style TargetType="TextBlock" x:Key="ListItemSubHeaderTextBlockStyle"
                           BasedOn="{StaticResource ListViewItemSubheaderTextBlockStyle}">
                        <Setter Property="FontWeight" Value="Normal"></Setter>
                    </Style>

                    <Style TargetType="ListView">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Style="{ThemeResource TitleTextBlockStyle}"></TextBlock>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="IsItemClickEnabled" Value="True"></Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.Transitions>
        <TransitionCollection>
            <PaneThemeTransition Edge="Bottom"></PaneThemeTransition>
        </TransitionCollection>
    </UserControl.Transitions>

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="19,17,0,0">

            <ListView Header="MENU"
                      ItemsSource="{Binding MenuItems, Mode=OneTime}"
                      ItemClick="MenuList_ItemClick">    
                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,13,0,0">
                            <TextBlock Text="{Binding Header, Mode=OneTime}" Style="{StaticResource SingleItemMediumHeaderStyle}"></TextBlock>
                            <TextBlock Text="{Binding SubHeader, Mode=OneTime}" Style="{StaticResource ListItemSubHeaderTextBlockStyle}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>

            <!-- Trial design -->
            <ListView ItemsSource="{Binding Courses}"
                      ItemClick="CourseList_ItemClick"
                      Header="COURSES" Margin="0,17,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,13,0,0">
                        <TextBlock Text="{Binding Title}"
                                   Style="{StaticResource SingleItemMediumHeaderStyle}"></TextBlock>
                            <TextBlock Text="{Binding CourseCode}"
                                       Style="{StaticResource ListItemSubHeaderTextBlockStyle}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
