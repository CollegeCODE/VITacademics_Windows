                                       Style="{StaticResource SingleItemContentStyle}"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            -->
        </StackPanel>
    </ScrollViewer>
</UserControl>
